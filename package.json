{
  "name": "gh-request-lib",
  "private": true,
  "version": "0.0.0",
  "description": "分层架构的前端请求库 - Monorepo",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:packages && pnpm run build:browser",
    "build:clean": "pnpm run clean && pnpm run build",
    "build:packages": "pnpm exec tsc -b --verbose",
    "build:incremental": "pnpm exec tsc -b",
    "build:browser": "pnpm exec vite build",
    "build:analyze": "pnpm run build:browser -- --mode analyze",
    "dev": "pnpm exec tsc -b --watch",
    "dev:packages": "pnpm -r --parallel run dev",
    "clean": "pnpm -r run clean && rimraf tsconfig.tsbuildinfo",
    "preinstall": "npx only-allow pnpm",
    "install-deps": "pnpm install",
    "test": "vitest",
    "test:run": "vitest run",
    "docs:dev": "pnpm --filter request-lib-docs run docs:dev",
    "docs:build": "pnpm --filter request-lib-docs run docs:build",
    "docs:preview": "pnpm --filter request-lib-docs run docs:preview"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "only-allow": "^1.2.1",
    "rimraf": "^6.0.1",
    "typescript": "~5.9.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  }
}
