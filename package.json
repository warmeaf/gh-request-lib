{
  "name": "gh-request-lib",
  "private": true,
  "version": "0.0.0",
  "description": "分层架构的前端请求库 - Monorepo",
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "build:browser": "pnpm -r run build && vite build",
    "dev": "pnpm -r run dev",
    "clean": "pnpm -r run clean",
    "demo:browser": "vite serve apps/demo-browser --port 3000",
    "install-deps": "pnpm install",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "rimraf": "^5.0.0",
    "typescript": "~5.9.2",
    "vite": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  }
}